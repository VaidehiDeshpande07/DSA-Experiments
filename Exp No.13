#include <stdio.h>

// Function for Selection Sort
void selectionSort(int arr[], int n) {
    int i, j, min, temp;
    for (i = 0; i < n - 1; i++) {
        min = i;
        for (j = i + 1; j < n; j++) {
            if (arr[j] < arr[min])
                min = j;
        }
        temp = arr[i];
        arr[i] = arr[min];
        arr[min] = temp;
    }
    printf("\nArray after Selection Sort: ");
    for (i = 0; i < n; i++)
        printf("%d ", arr[i]);
}

// Function for Bubble Sort
void bubbleSort(int arr[], int n) {
    int i, j, temp;
    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
    printf("\nArray after Bubble Sort: ");
    for (i = 0; i < n; i++)
        printf("%d ", arr[i]);
}

// Function for Insertion Sort
void insertionSort(int arr[], int n) {
    int i, j, key;
    for (i = 1; i < n; i++) {
        key = arr[i];
        j = i - 1;
        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j];
            j--;
        }
        arr[j + 1] = key;
    }
    printf("\nArray after Insertion Sort: ");
    for (i = 0; i < n; i++)
        printf("%d ", arr[i]);
}

int main() {
    int arr[50], n, choice, i;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements: ", n);
    for (i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    do {
        printf("\n\n---- Sorting Menu ----");
        printf("\n1. Selection Sort");
        printf("\n2. Bubble Sort");
        printf("\n3. Insertion Sort");
        printf("\n4. Exit");
        printf("\nEnter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                selectionSort(arr, n);
                break;
            case 2:
                bubbleSort(arr, n);
                break;
            case 3:
                insertionSort(arr, n);
                break;
            case 4:
                printf("\nExiting program...");
                break;
            default:
                printf("\nInvalid choice! Try again.");
        }
    } while (choice != 4);

    return 0;
}
